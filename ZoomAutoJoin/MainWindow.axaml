								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<RadioButton Grid.Column="0"
                                         Content="Radio option" />
							<RadioButton Grid.Column="1"
                                         IsChecked="True"
                                         Content="Another one" />
							<CheckBox Grid.Column="2"
                                      IsChecked="True"
                                      Content="Check me!" />
